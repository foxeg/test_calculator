= form_for @investor, url: investors_path, method: :post, remote: false do |f|
  #settings_errors
    - if @investor.errors.any?
      .alert.alert-sm.alert-danger.fade.in
        %ul
          - @investor.errors.full_messages.each do |msg|
            %li= t('field') + ' ' + msg
  .form-group
    = f.label :name
    = f.text_field :name, class: 'form-control'
  .form-group
    = submit_tag t('.save'), :class => "btn btn-primary btn-block"
